---
const { componentProps } = Astro.props

let height = componentProps.height ?? 400
let background = componentProps.bg ?? componentProps.background ?? 'black'
---

<div
  class="flex flex-col border border-gray-300 dark:border-gray-700 rounded-lg overflow-hidden"
>
  <div class="not-content w-full">
    <div
      class="flex items-center justify-between bg-gray-200 dark:bg-gray-800 p-2"
    >
      <div class="flex items-center space-x-1 opacity-75">
        <button class="h-3 w-3 rounded-full bg-red-500"></button>
        <button class="h-3 w-3 rounded-full bg-yellow-500"></button>
        <button class="h-3 w-3 rounded-full bg-green-500"></button>
      </div>
      <div class="text-center h-8">
        <!-- <h3 class="font-medium">Application Name</h3> -->
      </div>
      <div></div>
    </div>
    <div class="example-container">
      <slot name="example" />
    </div>
  </div>
  <slot name="code" />
</div>

<style define:vars={{ height: `${height}px`, background }}>
  .example-container {
    height: calc(var(--height));
    background: var(--background);
  }
</style>

<style is:global>
  pre {
    max-height: 500px !important;
    overflow: auto;
    border: none !important;
  }

  canvas {
    display: flex;
  }
</style>
